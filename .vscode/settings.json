    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#87b894",
    "activityBarBadge.foreground": "#15202b",
    "sash.hoverBorder": "#996b5b",
    "statusBar.background": "#795548",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#996b5b",
    "statusBarItem.remoteBackground": "#795548",
    "statusBarItem.remoteForeground": "#e7e7e7"
  },
  "peacock.color": "#795548"
}
